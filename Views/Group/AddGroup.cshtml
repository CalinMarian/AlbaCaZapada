@model AlbaCaZapada.Models.Group

<form method="post" asp-action="AddGroup">
    <div class="container p-3">
        <div class="row pt-4">
            <div class="col-6">
                <h2 class="text-black-50">Adauga grupa noua</h2>
            </div>
        </div>
        <div class="row">
            <div class="col-12">
                <div class="form-group row">
                    <div class="col-3">
                        <label asp-for="GroupName"></label>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-3">
                        <input asp-for="GroupName" class="form-control">
                        <span asp-validation-for="GroupName" class="text-danger"></span>
                    </div>
                </div>
                <p></p>
                <div class="form-group row">
                    <div class="col-6">
                        <input type="submit" class="btn btn-success" value="Salveaza">
                    </div>
                    <div class="col-6">
                        <a class="btn btn-danger fa-pull-right" asp-action="Index">Inapoi</a>
                    </div>
                </div>
            </div>
        </div>
    </div>

</form>

@section Scripts
{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}
