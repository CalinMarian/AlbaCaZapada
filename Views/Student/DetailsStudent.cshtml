@model AlbaCaZapada.Models.Student

<form method="get" asp-controller="Student" asp-action="DetailsStudent">
    <input asp-for="Id" hidden>
    <div class="border p-3">
        <div class="form-group row">
            <h2 class="text-black-50 pl-3">Detalli elev</h2>
        </div>
        <div class="row">
            <div class="col-12">
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Name"></label>
                    </div>
                    <div class="col-4">
                        <label asp-for="Group"></label>
                    </div>
                    <div class="col-4">
                        <label asp-for="InSchool"></label>
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-4">
                        @Html.TextBoxFor(model => model.Name)
                    </div>
                    <div class="col-4">
                        @Html.TextBoxFor(model => model.Group.GroupName)
                    </div>
                    <div class="col-4">
                        @Html.CheckBoxFor(model => model.InSchool)
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="FirstParent"></label>
                    </div>
                    <div class="col-4">
                        <label asp-for="SecondParent"></label>
                    </div>
                    <div class="col-4">
                        <label asp-for="Details"></label>
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-4">
                        @Html.TextAreaFor(model => model.FirstParent, 10, 40, null)
                    </div>
                    <div class="col-4">
                        @Html.TextAreaFor(model => model.SecondParent, 10, 40, null)
                    </div>
                    <div class="col-4">
                        @Html.TextAreaFor(model => model.Details, 10, 40, null)
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-6">
                        @if (Model.InSchool == true)
                        {
                        <a class="btn btn-success" asp-action="Index">Inapoi</a>
                        }
                        else
                        { 
                    <a class="btn btn-success" asp-action="InactiveStudents">Inapoi</a>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>