@model AlbaCaZapada.Models.Student

<form method="post" asp-action="DeleteStudentPost">
    <input asp-for="Id" hidden>
    <div class="border p-3">
        <div class="form-group row">
            <h2 class="text-black-50 pl-3">Sterge elevul din baza de date</h2>
        </div>
        <div class="row">
            <div class="col-12">
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Name"></label>
                    </div>
                    <div class="col-4">
                        <label asp-for="CNP"></label>
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-4">
                        <input asp-for="Name" disabled class="form-control">
                    </div>
                    <div class="col-4">
                        <input asp-for="CNP" disabled class="form-control">
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-6">
                        <input type="submit" class="btn btn-danger" value="Sterge">
                    </div>
                    <div class="col-6">
                        <a asp-action="Index" class="btn btn-success">Anuleaza</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>
