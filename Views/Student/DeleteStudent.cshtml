@model AlbaCaZapada.Models.Student

<form method="post" asp-action="DeleteStudentPost">
    <input asp-for="Id" hidden>
    <div class="border p-3">
        <div class="form-group row">
            <h2 class="text-black-50 pl-3">Sterge elevul din baza de date</h2>
        </div>
        <div class="row">
            <div class="col-12">
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Name"></label>
                    </div>
                    <div class="col-4">
                        <label asp-for="BirthDate"></label>
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-4">
                        <input asp-for="Name" disabled class="form-control">
                    </div>
                    <div class="col-4">
                        <input asp-for="BirthDate" disabled class="form-control">
                    </div>
                </div>

                <div class="col-12">
                    <div class="form-group row">
                        <div class="col-4">
                            <label asp-for="FirstParent"></label>
                        </div>
                        <div class="col-4">
                            <label asp-for="SecondParent"></label>
                        </div>
                        <div class="col-4">
                            <label asp-for="Details"></label>
                        </div>
                    </div>

                    <div class="form-group row">
                        <div class="col-4">
                            @Html.TextAreaFor(model => model.FirstParent, 10, 40, null)
                        </div>
                        <div class="col-4">
                            @Html.TextAreaFor(model => model.SecondParent, 10, 40, null)
                        </div>
                        <div class="col-4">
                            @Html.TextAreaFor(model => model.Details, 10, 40, null)
                        </div>
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-6">
                        <input type="submit" class="btn btn-danger" value="Sterge">
                    </div>
                    <div class="col-6">
                        <a class="btn btn-success fa-pull-right" asp-action="Index">Inapoi</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>
