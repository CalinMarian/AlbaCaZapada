@model AlbaCaZapada.Models.Student

<form method="post" asp-action="EditStudentPost">
    <input asp-for="Id" hidden>
    <div class="border p-3">
        <div class="form-group row">
            <h2 class="text-black-50 pl-3">Editeaza informatiile elevului</h2>
        </div>
        <div class="row">
            <div class="col-12">
                <div class="form-group row">
                    <div class="col-3">
                        <label asp-for="Name"></label>
                    </div>
                    <div class="col-3">
                        <label asp-for="Group"></label>
                    </div>
                    <div class="col-3">
                        <label asp-for="InSchool"></label>
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-3">
                        <input asp-for="Name" class="form-control">
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="col-3">
                        @*@Html.DropDownList("GroupId", (IEnumerable<SelectListItem>)ViewBag.Name, new { AddHtmlAttributeValue = true })
                        <span asp-validation-for="Group" class="text-danger"></span>*@
                        @Html.DropDownList("GroupId", (IEnumerable<SelectListItem>)ViewBag.listName, "Selecteaza Grupa")
                        <span asp-validation-for="Group" class="text-danger"></span>
                    </div>
                    <div class="col-3">
                        <input asp-for="InSchool">
                    </div>
                </div>
            </div>
            <div class="col-12">
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="FirstParent"></label>
                    </div>
                    <div class="col-4">
                        <label asp-for="SecondParent"></label>
                    </div>
                    <div class="col-4">
                        <label asp-for="Details"></label>
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-4">
                        @Html.TextAreaFor(model => model.FirstParent, 10, 40, null)
                    </div>
                    <div class="col-4">
                        @Html.TextAreaFor(model => model.SecondParent, 10, 40, null)
                    </div>
                    <div class="col-4">
                        @Html.TextAreaFor(model => model.Details, 10, 40, null)
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-6">
                        <input type="submit" class="btn btn-success" value="Salveaza">
                    </div>
                    <div class="col-6">
                        @if (Model.InSchool == true)
                        {
                            <a class="btn btn-danger fa-pull-right" asp-action="Index">Anuleaza</a>
                        }
                        else
                        {
                            <a class="btn btn-danger fa-pull-right" asp-action="InactiveStudents">Anuleaza</a>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>
@section Scripts
{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}