@model IEnumerable<AlbaCaZapada.Models.Student>

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary text-black-50">Lista elevi</h2>
        </div>
        <div class="col-6 text-right">
            <a asp-controller="StudentController" asp-action="AddStudent" class="btn btn-primary">Adauga elev</a>
        </div>
    </div>
    <br />
    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>
                        Nume
                    </th>
                    <th>
                        CNP
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var student in Model)
                {
                    <tr>
                        <td width="50%">@student.Name</td>
                        <td width="50%">@student.CNP</td>
                    </tr>
                }
            </tbody>
        </table>
    }

    else
    {
        <p>Nu exista nici un student in baza de date.</p>
    }

</div>
