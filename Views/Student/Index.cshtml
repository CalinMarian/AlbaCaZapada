@model IEnumerable<AlbaCaZapada.Models.Student>

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6"
         <h2 class="text-primary">Lista elevi</h2>
        </div>
        <div class="col-6">
            Adauga elev
        </div>
    </div>
    <br />
    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>
                        Nume elev
                    </th>
                    <th>
                        CNP elev
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var student in Model)
                {
                    <tr>
                        <td width="30%">@student.Name</td>
                        <td width="30%">@student.CNP</td>
                        <td width="30%"></td>
                    </tr>
                }
            </tbody>
        </table>
    }
    
    else
    {
    <p>Nu exista nici un student in baza de date.</p>
    }

</div>
