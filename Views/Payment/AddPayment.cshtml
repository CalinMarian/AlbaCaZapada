@model AlbaCaZapada.Models.Payment

<form method="post" asp-action="AddPayment">

    <div class="container p-3">
        <div class="form-group row">
            <h2 class="text-black-50 pl-3">Adauga plata</h2>
        </div>
        <div class="row">
            <div class="col-12">
                <div class="form-group row">
                    <div class="col-6">
                        <label asp-for="Amount"></label>
                    </div>
                    <div class="col-6">
                        <label asp-for="PaymentDate"></label>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-6">
                        <input asp-for="Amount" class="form-control">
                        <span asp-validation-for="Amount" class="text-danger"></span>
                    </div>
                    <div class="col-6">
                        <input asp-for="PaymentDate" class="form-control">
                        <span asp-validation-for="PaymentDate" class="text-danger"></span>
                    </div>
                </div>
                <p></p>
                <div class="form-group row">
                    <div class="col-6">
                        <input type="submit" class="btn btn-success" value="Salveaza plata">
                    </div>
                    <div class="col-6">
                        <a asp-controller="Payment" asp-action="Index" asp-route-Id="Id" class="btn btn-primary fa-pull-right">Anuleaza</a>
                    </div>
                </div>
            </div>
        </div>
    </div>

</form>

@section Scripts
{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}
