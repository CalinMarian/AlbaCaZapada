@model AlbaCaZapada.Models.Payment

<form method="post" asp-action="AddPayment">
    <div class="container p-3">
        <div class="row pt-4">
            <div class="col-6">
                <h2 class="text-black-50">Adauga plata pt</h2>
                <h1>@ViewData["StudentName"]</h1>
            </div>
        </div>
        <div class="row">
            <div class="col-12">
                <div class="form-group row">
                    <div class="col-3">
                        <label asp-for="Month"></label>
                    </div>
                    <div class="col-2">
                        <label asp-for="WorkingDaysInMonth"></label>
                    </div>
                    <div class="col-2">
                        <label asp-for="DaysInSchool"></label>
                    </div>
                    <div class="col-2">
                        <label asp-for="PaymentDate"></label>
                    </div>
                    <div class="col-2">
                        <label asp-for="Amount"></label>
                    </div>
                    <div class="col-1">
                        <label asp-for="Fee"></label>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-3">
                        <input asp-for="Month" class="form-control">
                        <span asp-validation-for="Month" class="text-danger"></span>
                    </div>
                    <div class="col-2">
                        <input asp-for="WorkingDaysInMonth" class="form-control">
                        <span asp-validation-for="WorkingDaysInMonth" class="text-danger"></span>
                    </div>
                    <div class="col-2">
                        <input asp-for="DaysInSchool" class="form-control">
                    </div>
                    <div class="col-2">
                        <input asp-for="PaymentDate" class="form-control">
                    </div>
                    <div class="col-2">
                        <input asp-for="Amount" class="form-control">
                    </div>
                    <div class="col-1">
                        <input asp-for="Fee" class="form-control">
                    </div>
                </div>
                <p></p>
                <div class="form-group row">
                    <div class="col-6">
                        <input type="submit" class="btn btn-success" value="Salveaza plata">
                    </div>
                    <div class="col-6">
                        <a class="btn btn-danger fa-pull-right" asp-action="Index" asp-route-id="@ViewData["StudentId"]">Inapoi</a>
                    </div>
                </div>
            </div>
        </div>
    </div>

</form>

@section Scripts
{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}
