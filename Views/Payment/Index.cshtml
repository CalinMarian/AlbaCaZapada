@model IEnumerable<AlbaCaZapada.Models.Payment>

<form method="get" asp-action="Index">
    <div class="container p-3">
        <div class="row pt-4">
            <div class="col-6">
                <h2 class="text-primary text-black-50">Taxa scolarizare pt:</h2>
                <h1>@ViewData["StudentName"]</h1>
            </div>
            <div class="col-6 text-right">
                <a class="btn btn-success fa-pull-right fas fa-plus" asp-controller="Payment" asp-action="AddPayment" asp-route-Id="@ViewData["StudentId"]">Adauga plata</a>
            </div>
        </div>
        <br />
        @if (Model.Count() > 0)
        {
            <table class="table table-bordered table-striped" style="width:100%">
                <thead>
                    <tr>
                        <th>
                            Suma (RON)
                        </th>
                        <th>
                            Data platii
                        </th>
                        <th>
                            Zile Prezenta
                        </th>
                        <th>
                            Zile Absenta
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var payment in Model)
                    {
                        <tr>
                            <td width="30%">@payment.Amount</td>
                            <td width="30%">@payment.PaymentDate.ToString("dd/MM/yyyy")</td>
                            <td width="15%">@payment.DaysInSchool</td>
                            <td width="15%">@payment.DaysOutSchool</td>
                            <td width="10%">
                                <a class="btn btn-warning" asp-controller="Payment" asp-action="EditPayment" asp-route-Id="@payment.Id">Actualizeaza</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <p>Nu exista nici o plata pt acest elev!</p>
        }
        <a class="btn btn-success" asp-controller="Student" asp-action="Index">Inapoi</a>

    </div>
</form>

@section Scripts
{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}
