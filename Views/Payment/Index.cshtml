@model AlbaCaZapada.Models.Student

<form method="get" asp-action="Index">
    <div class="container p-3">
        <div class="row pt-4">
            <div class="col-6">
                <h2 class="text-primary text-black-50">Taxa scolarizare pt:</h2>
                <h1>@Model.Name</h1>
            </div>
            <div class="col-6 text-right">
                <a class="btn btn-success fa-pull-right" asp-controller="Payment" asp-action="AddPayment" asp-route-Id="@Model.Id">Adauga plata</a>
            </div>
        </div>
        <br />
        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>
                        Valoare (RON)
                    </th>
                    <th>
                        Data platii
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var payment in Model.Payments)
                {
                    <tr>
                        <td width="45%">@payment.Amount</td>
                        <td width="45%">@payment.PaymentDate</td>
                        <td width="10%">
                            <a class="btn btn-danger" asp-controller="Payment" asp-action="DeletePayment" asp-route-Id="@payment.Id">Sterge</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
            <a class="btn btn-success" asp-controller="Student" asp-action="Index">Inapoi</a>
    </div>
</form>

@section Scripts
{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}
