@model AlbaCaZapada.Models.Payment

<form method="post" asp-action="EditPaymentPost">
    <input asp-for="Id" hidden>
    <div class="border p-3">
        <div class="form-group row">
            <h2 class="text-black-50 pl-3">Editeaza plata</h2>
        </div>
        <div class="row">
            <div class="col-12">
                <div class="form-group row">
                    <div class="col-3">
                        <label asp-for="Amount"></label>
                    </div>
                    <div class="col-3">
                        <label asp-for="PaymentDate"></label>
                    </div>
                    <div class="col-3">
                        <label asp-for="DaysInSchool"></label>
                    </div>
                    <div class="col-3">
                        <label asp-for="DaysOutSchool"></label>
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-3">
                        <input asp-for="Amount" class="form-control">
                        <span asp-validation-for="Amount" class="text-danger"></span>
                    </div>
                    <div class="col-3">
                        <input asp-for="PaymentDate" class="form-control">
                        <span asp-validation-for="PaymentDate" class="text-danger"></span>
                    </div>
                    <div class="col-3">
                        <input asp-for="DaysInSchool" class="form-control">
                    </div>
                    <div class="col-3">
                        <input asp-for="DaysOutSchool">
                    </div>
                </div>
            </div>
            <p></p>
            <div class="form-group row">
                <div class="col-6">
                    <input type="submit" class="btn btn-success" value="Salveaza">
                </div>
                <div class="col-6">
                        <a class="btn btn-danger fa-pull-right" asp-action="Index" asp-route-id="@ViewData["StudentId"]">Anuleaza</a>
                </div>
            </div>
        </div>
    </div>
</form>
@section Scripts
{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}